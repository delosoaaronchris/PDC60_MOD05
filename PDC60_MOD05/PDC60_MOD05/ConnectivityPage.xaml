<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC60_MOD05.ConnectivityPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button Text="Check Connectivity" Clicked="ConnectivityButton_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large"  BackgroundColor="LightBlue"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>