<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC60_MOD05.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Accelarator" Clicked="AccelerometerPage_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large" BackgroundColor="LightBlue" />
        <Button Text="Barometer" Clicked="BarometerPage_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large"  BackgroundColor="LightBlue"/>
        <Button Text="Connectivity" Clicked="ConnectivityPage_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large"  BackgroundColor="LightBlue"/>
        <Button Text="Magnetometer" Clicked="MagnetometerPage_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large"  BackgroundColor="LightBlue"/>
        <Button Text="My Compass" Clicked="MyCompass_Clicked" CornerRadius="15" 
                Margin="10" FontSize="Large"  BackgroundColor="LightBlue"/>

        

    </StackLayout>

</ContentPage>
